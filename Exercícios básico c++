#include <iostream>
#include <string>
using namespace std;

int main() {
    string frase;

    cout << "Digite uma frase: ";
    getline(cin, frase);

    for (int i = 0; i < 30; ++i) {
        cout << frase << endl;
    }

    return 0;
}
-----------------------------------
#include <iostream>
using namespace std;

int main() {
   int numero;
   cout << "Digite um nÃºmero: ";
   cin >> numero;
   
   cout << "Tabuada de " << numero << ":\n";
   
   for (int i = 1; i <= 10; i++) {
       cout << numero << " x " << i << " = " << numero * i << endl;
   }

   return 0;
}
